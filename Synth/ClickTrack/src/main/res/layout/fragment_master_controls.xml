<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="edu.cmu.ece.ece551.clicktrack.MasterControls">

    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="REVERB"
                android:textStyle="bold"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gain"/>
        <edu.cmu.ece.ece551.uis.KnobView
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/reverbGainKnob"
                android:layout_width="140dp"
                android:layout_height="140dp" />
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Wetness"/>
        <edu.cmu.ece.ece551.uis.KnobView
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/reverbWetnessKnob"
                android:layout_width="140dp"
                android:layout_height="140dp" />
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Decay time"/>
        <edu.cmu.ece.ece551.uis.KnobView
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/reverbTimeKnob"
                android:layout_width="140dp"
                android:layout_height="140dp" />
    </LinearLayout>
</FrameLayout>
